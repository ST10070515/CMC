@model PROG6212_CMCS.Models.ViewModels.ProgrammeCoordinatorDashboardViewModel
@* Set the model type at the top of the view *@

<div class="container mt-4">
    <h1>Programme Coordinator Dashboard</h1>

    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Claims Awaiting Your Review (@Model.ClaimsForReview.Count)</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Claim ID</th>
                        <th scope="col">Lecturer</th>
                        <th scope="col">Date Submitted</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @* REPLACING HARDCODED ROWS WITH DB DATA *@
                    @foreach (var claim in Model.ClaimsForReview)
                    {
                        <tr>
                            @*<td>@claim.ClaimID</td>
                            <td>@claim.Lecturer.FirstName @claim.Lecturer.LastName</td>*@
                            <td>@claim.SubmissionDate.ToShortDateString()</td>
                            <td>@claim.ClaimAmount.ToString("C")</td>
                            <td>
                                <a href="@Url.Action("ApproveClaim", "ProgrammeCoordinator", new { id = claim.ClaimID })" class="btn btn-success btn-sm">Approve</a>
                                <a href="@Url.Action("RejectClaim", "ProgrammeCoordinator", new { id = claim.ClaimID })" class="btn btn-danger btn-sm">Reject</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.ClaimsForReview.Any())
            {
                <p>No claims currently awaiting Programme Coordinator review.</p>
            }
        </div>
    </div>
    @* ... rest of the view content ... *@
</div>


@model PROG6212_CMCS.Models.Claim  
@* Views/HR/Dashboard.cshtml *@
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    <h1>HR Dashboard</h1>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Approved Claims</h5>
                    <p class="card-text display-4">12</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Payment Amount</h5>
                    <p class="card-text display-4">$6,200</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Lecturers Active</h5>
                    <p class="card-text display-4">45</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Approved Claims Table -->
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Recent Approved Claims</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Claim ID</th>
                        <th scope="col">Lecturer</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Approval Date</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>001</td>
                        <td>John Doe</td>
                        <td>$500</td>
                        <td>2025-10-16</td>
                        <td>
                            <a href="#" class="btn btn-primary btn-sm">Generate Invoice</a>
                        </td>
                    </tr>
                    <tr>
                        <td>003</td>
                        <td>Mike Johnson</td>
                        <td>$450</td>
                        <td>2025-10-15</td>
                        <td>
                            <a href="#" class="btn btn-primary btn-sm">Generate Invoice</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("ManageLecturers", "HR")" class="btn btn-secondary">Manage Lecturers</a>
                <a href="@Url.Action("GenerateReports", "HR")" class="btn btn-info">Generate Reports</a>
                <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log("HR Dashboard loaded");
        });
    </script>
}
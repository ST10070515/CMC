@model PROG6212_CMCS.Models.ViewModels.DashboardData
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">HR Dashboard</h1>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Approved Claims</h5>
                    <p class="card-text display-4">@Model.totalApprovedClaims</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Amount Payable</h5>
                    <p class="card-text display-4">R @Model.totalAmountPayable.ToString("N2")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Lecturers</h5>
                    <p class="card-text display-4">@Model.totalLecturers</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Approved Claims</h2>
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Claim ID</th>
                        <th scope="col">Lecturer</th>
                        <th scope="col">Course</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Status</th>
                        <th scope="col">Documents</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.claims != null && Model.claims.Any())
                    {
                        @foreach (var claim in Model.claims.Where(c => c.claim.ClaimStatus == ClaimStatus.APPROVED))
                        {
                            <tr>
                                <td>@claim.claim.ClaimID</td>
                                <td>@claim.user.FirstName @claim.user.LastName</td>
                                <td>@claim.claim.CourseName</td>
                                <td>R @claim.claim.ClaimAmount.ToString("N2")</td>
                                <td>Approved</td>
                                <td>
                                    @if (claim.documents.Any())
                                    {
                                        @foreach (var doc in claim.documents)
                                        {
                                            <p>
                                                <a href="@Url.Action("DownloadDocument", "Common", new { docId = doc.DocumentID })">
                                                    @doc.FileName
                                                </a>
                                            </p>
                                        }
                                    }
                                    else
                                    {
                                        <p>No documents</p>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("GenerateInvoice", "HR", new { claimId = claim.claim.ClaimID })"
                                       class="btn btn-primary btn-sm">
                                        Generate Invoice
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No approved claims available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("ManageLecturers", "HR")" class="btn btn-secondary">Manage Lecturers</a>
                <a href="@Url.Action("GenerateReports", "HR")" class="btn btn-info">Generate Reports</a>
                <a href="@Url.Action("Login", "Account", new { userId = ViewBag.userId })" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            console.log("HR Dashboard loaded successfully");
        });
    </script>
}
